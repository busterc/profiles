alias corpa-file="cordova plugin add org.apache.cordova.xxx"
alias corpa-file-transfer="cordova plugin add org.apache.cordova.file-transfer"
alias corpa-geolocation="cordova plugin add org.apache.cordova.geolocation"
alias corpa-globalization="cordova plugin add org.apache.cordova.globalization"
alias corpa-inappbrowser="cordova plugin add org.apache.cordova.inappbrowser"
alias corpa-media="cordova plugin add org.apache.cordova.media"
alias corpa-media-capture="cordova plugin add org.apache.cordova.media-capture"
